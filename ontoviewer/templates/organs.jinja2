{% extends "layout.jinja2" %}


{% block  more_scripts %}
 	<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
{% endblock  more_scripts %}

  {% block more_links %}   
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
	<link href="{{request.static_url('ontoviewer:static/bootstrap-table.min.css')}}" rel="stylesheet">   
	<link href="{{request.static_url('ontoviewer:static/extensions/filter-control/bootstrap-table-filter-control.min.css')}}" rel="stylesheet">   
	<style>
.filter-control  { margin: 0px 20px 10px 20px;}
</style>

  {% endblock %}

{% block content %}

<table
  id="table"
  data-filter-control="true"
  data-pagination="true"
  data-sort-name="name"
  data-sort-order="desc"
  data-url="{{request.static_url('ontoviewer:static/organs.json')}}"
  >
<thead>
        <tr>
          <th data-field="organ" data-filter-control="input" data-sortable="true" >Main organ</th>
          <th data-field="organ_type" data-filter-control="input" data-sortable="true">Organ part or subdivision</th>
		  <th data-field="type" data-filter-control="select" data-sortable="true">Type</th>
		  <th data-field="anatomic_system" data-filter-control="input" data-sortable="true">Anatomical system</th>
        </tr>
      </thead>
    </table>
	



{% endblock content %}

{% block comp_script %}

<script>

 var $table = $('#table')
  $(function() {

	$table.bootstrapTable()	
	var $selectControl = $(".bootstrap-table-filter-control-name"); 
	$selectControl.val("Lung"); 
	$selectControl.change();
	
	var $selectControl = $(".bootstrap-table-filter-control-organ_part"); 
	$selectControl.attr('placeholder', 'type your search to filter the results');	

  })
  


</script>

